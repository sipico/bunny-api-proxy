# Dockerfile.testrunner
# Runs E2E tests inside the test network

FROM golang:1.25-alpine

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source (needed for tests)
COPY . .

# Default command runs e2e tests
CMD ["go", "test", "-v", "-tags=e2e", "./tests/e2e/..."]
