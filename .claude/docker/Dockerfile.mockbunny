# Dockerfile.mockbunny
# Lightweight mock bunny.net server for E2E testing

FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build mockbunny binary
RUN CGO_ENABLED=0 GOOS=linux go build -o mockbunny ./cmd/mockbunny

# Final stage - distroless for minimal attack surface
FROM gcr.io/distroless/static:nonroot

WORKDIR /app

COPY --from=builder /app/mockbunny .

EXPOSE 8081

# Health check using built-in health subcommand (no shell/wget needed)
HEALTHCHECK --interval=10s --timeout=3s --start-period=5s --retries=3 \
	CMD ["/app/mockbunny", "health"]

# Run as nonroot user (UID 65532, already default in :nonroot variant)
USER nonroot:nonroot

# Run the binary (exec form required - no shell available)
ENTRYPOINT ["/app/mockbunny"]
