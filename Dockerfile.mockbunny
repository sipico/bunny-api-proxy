# Dockerfile.mockbunny
# Lightweight mock bunny.net server for E2E testing

FROM golang:1.24-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build mockbunny binary
RUN CGO_ENABLED=0 GOOS=linux go build -o mockbunny ./cmd/mockbunny

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /app/mockbunny .

# Non-root user
RUN adduser -D -u 1000 mockbunny
USER mockbunny

EXPOSE 8081

# Health check
HEALTHCHECK --interval=10s --timeout=3s --start-period=5s --retries=3 \
	CMD wget --no-verbose --tries=1 --spider http://localhost:8081/admin/state || exit 1

CMD ["./mockbunny"]
