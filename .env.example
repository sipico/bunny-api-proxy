# Bunny API Proxy Environment Configuration
# Copy this file to .env and customize for your deployment

# Admin panel password - MUST be changed in production
# Generate a secure password: `openssl rand -base64 32`
ADMIN_PASSWORD=changeme

# Encryption key for storing sensitive data
# MUST be changed in production and kept secret
# Generate a key: `openssl rand -base64 32`
ENCRYPTION_KEY=changeme

# Log level: debug, info, warn, error
# Use 'info' for production, 'debug' for troubleshooting
LOG_LEVEL=info

# HTTP port the proxy listens on
# Default: 8080 (change if running multiple instances or using container port mapping)
HTTP_PORT=8080

# Path to SQLite database file
# In Docker: /data/proxy.db (matches volume mount)
# On bare metal: /var/lib/bunny-api-proxy/proxy.db or similar
DATA_PATH=/data/proxy.db

# Optional: bunny.net API base URL
# Uncomment to override default (https://api.bunny.net)
# BUNNY_API_URL=https://api.bunny.net

# Optional: Enable metrics endpoint at /metrics (Prometheus format)
# Uncomment to enable: METRICS_ENABLED=true
# METRICS_ENABLED=false

# Optional: CORS allowed origins
# Comma-separated list of origins (e.g., https://example.com,https://app.example.com)
# Leave empty to disable CORS
# CORS_ALLOWED_ORIGINS=

# Database initialization: set to 'true' to auto-initialize schema on startup
# Useful for first-time deployments; set to 'false' in production after initialization
DATABASE_AUTO_INIT=true

# TLS Configuration (optional, for direct HTTPS without reverse proxy)
# Uncomment to enable TLS termination by the proxy
# TLS_ENABLED=false
# TLS_CERT_PATH=/etc/bunny-api-proxy/certs/cert.pem
# TLS_KEY_PATH=/etc/bunny-api-proxy/certs/key.pem

# Optional: Request timeout in seconds
# Default: 30 seconds
# REQUEST_TIMEOUT=30

# Optional: Max request body size in bytes
# Default: 10MB (10485760 bytes)
# MAX_BODY_SIZE=10485760
